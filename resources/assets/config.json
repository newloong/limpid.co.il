{
  "entry": {
    "main": [
      "./scripts/main.js",
      "./styles/main.scss"
    ],
    "customizer": [
      "./scripts/customizer.js"
    ]
  },
  "enabled": {
    "sourceMaps": true
  },
  "publicPath": "/app/themes/sage",
  "devUrl": "http://limpid-dev.com",
  "proxyUrl": "http://localhost:8080",
  "cacheBusting": "[name]_[hash:8]",
  "watch": [
    "app/**/*.php",
    "config/**/*.php",
    "resources/views/**/*.php"
  ]
}
